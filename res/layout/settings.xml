<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="5" >

    <TextView
        android:id="@+id/textView3"
        android:layout_width="99dp"
        android:layout_column="1"
        android:layout_columnSpan="2"
        android:layout_gravity="left|bottom"
        android:layout_row="1"
        android:text="Ringer Mode" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_column="2"
        android:layout_gravity="left"
        android:layout_row="1"
        android:text="Period (sec)"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Space
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_column="0"
        android:layout_row="0" />

    <Space
        android:layout_width="16dp"
        android:layout_height="1dp"
        android:layout_column="1"
        android:layout_row="0" />

    <Space
        android:layout_width="1dp"
        android:layout_height="67dp"
        android:layout_column="0"
        android:layout_row="0" />

    <Space
        android:layout_width="26dp"
        android:layout_height="1dp"
        android:layout_column="2"
        android:layout_row="0" />

    <Space
        android:layout_width="48dp"
        android:layout_height="1dp"
        android:layout_column="3"
        android:layout_row="0" />

    <Space
        android:layout_width="21dp"
        android:layout_height="1dp"
        android:layout_column="0"
        android:layout_row="0" />

    <Space
        android:layout_width="1dp"
        android:layout_height="80dp"
        android:layout_column="0"
        android:layout_row="1" />

    <Space
        android:layout_width="1dp"
        android:layout_height="36dp"
        android:layout_column="0"
        android:layout_row="2" />

    <Space
        android:layout_width="1dp"
        android:layout_height="176dp"
        android:layout_column="0"
        android:layout_row="3" />

    <Space
        android:layout_width="1dp"
        android:layout_height="15dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_column="2"
        android:layout_row="3"
        android:text="Free"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Spinner
        android:id="@+id/planets_spinner_Free_Mode"
        android:layout_width="130dp"
        android:layout_column="3"
        android:layout_row="3" />

    <Space
        android:layout_width="34dp"
        android:layout_height="15dp"
        android:layout_column="4" />

    <EditText
        android:id="@+id/periodTime"
        android:layout_width="93dp"
        android:layout_column="3"
        android:layout_row="1"
        android:ems="10"
        android:inputType="number" />

    <Button
        android:id="@+id/settingsUpdate"
        android:layout_column="3"
        android:layout_gravity="bottom"
        android:layout_row="3"
        android:text="Update" />

    <Button
        android:id="@+id/settingsCancle"
        android:layout_column="2"
        android:layout_gravity="bottom"
        android:layout_row="3"
        android:text="Cancle" />

    <Space
        android:layout_width="100dp"
        android:layout_height="19dp"
        android:layout_row="4" />

    <TextView
        android:id="@+id/textView2"
        android:layout_column="2"
        android:layout_row="2"
        android:text="Meeting"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Spinner
        android:id="@+id/planets_spinner_Meeting_Mode"
        android:layout_width="130dp"
        android:layout_column="3"
        android:layout_row="2" />

    <Space
        android:layout_width="100dp"
        android:layout_height="19dp"
        android:layout_row="4" />

</GridLayout>